<h2>Signup</h2>

  <div class="signupContainer row">
    <form class="signupForm col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="name-signup" type="text" class="validate">
          <label for="name">Name</label>
        </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email-signup" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password-signup" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
        <div>
            <button type="submit">Signup</button>
        </div>
    </div>
    </form>
</div>


